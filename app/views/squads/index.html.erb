<h1 class="redglow" style="text-align: center">Listing squads</h1>

<div class="container">
<table class="redglow">
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @squads.each do |squad| %>
  <tr>
    <td><%= squad.name %></td>
    <td><%= link_to 'Show', squad %></td>
    <td><%= link_to 'Edit', edit_squad_path(squad) %></td>
    <td><%= link_to 'Destroy', squad, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
</div>
<br />

<%= link_to 'New Squad', new_squad_path %> <br>
