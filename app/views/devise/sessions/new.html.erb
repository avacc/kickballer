
<h2 class="redglow" style="text-align: center">Sign in</h2>

<%= form_for(@user, :as => @user, :url => session_path(@user),
             html: { class: "form-horizontal"}) do |f| %>
  <div class="container, greenglow">
    <div class="control-group"><%= f.label :email, class: "control-label" %>
        <div class="controls"><%= f.email_field :email, :autofocus => true %></div>
    </div><br>

    <div class="control-group"><%= f.label :password, class: "control-label" %>
      <div class="controls"><%= f.password_field :password %></div>
    </div><br>

    <% if devise_mapping.rememberable? -%>
      <div class="control-group"><%= f.label :remember_me, class: "control-label" %>
        <div class="controls"><%= f.check_box :remember_me %> </div>
      </div><br>
    <% end -%>

    <div class="form-actions, span6" style="text-align: center">
      <%= f.submit "Sign in", class: "btn btn-primary" %>
    </div>
    <%= render "devise/shared/links" %>
  </div>
<% end %>