
<h2 class="redglow" style="text-align: center">Sign up</h2>

<%= form_for(@user, :as => @user, :url => registration_path(@user),
             html: {class: "form-horizontal"}) do |f| %>
  <%= devise_error_messages! %>
  <div class="container, greenglow">
    <div class="control-group"><%= f.label :email, class: "control-label" %>
        <div class="controls"><%= f.email_field :email, :autofocus => true %></div>
    </div><br>
    <div class="control-group"><%= f.label :password, class: "control-label" %>
        <div class="controls"><%= f.password_field :password %></div>
    </div><br>
    <div class="control-group"><%= f.label :password_confirmation, class: "control-label" %>
        <div class="controls"><%= f.password_field :password_confirmation %></div>
    </div><br>
    <div class="form-actions, span6" style="text-align: center">
        <%= f.submit "Sign up", class: "btn btn-primary" %>
    </div>
  </div>
  <%= render "devise/shared/links" %>
<% end %>